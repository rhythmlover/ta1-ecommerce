{
    "name": "ta1-ecommerce-backend",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "prisma:dev:deploy": "prisma migrate deploy",
        "db:dev:rm": "docker compose rm dev-db -s -f -v",
        "db:dev:up": "docker compose up dev-db -d",
        "db:dev:restart": "yarn db:dev:rm && yarn db:dev:up && sleep 1 && yarn prisma:dev:deploy",
        "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
        "db:test:rm": "docker compose rm test-db -s -f -v",
        "db:test:up": "docker compose up test-db -d",
        "db:test:restart": "yarn db:test:rm && yarn db:test:up && sleep 1 && yarn prisma:test:deploy",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "pretest:e2e": "yarn db:test:restart",
        "test:e2e": "dotenv -e .env.test -- jest --watch --no-cache --config ./test/jest-e2e.json",
        "postinstall": "npx puppeteer browsers install chrome"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.10",
        "@nestjs/common": "^10.4.9",
        "@nestjs/config": "^3.3.0",
        "@nestjs/core": "^10.4.9",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/schematics": "^11.0.9",
        "@prisma/client": "^7.2.0",
        "@types/express": "^5.0.0",
        "argon2": "^0.28.7",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.0",
        "prettier": "^2.3.2",
        "prisma": "^7.2.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@nestjs/platform-express": "^10.4.15",
        "@nestjs/schedule": "^6.0.0",
        "@prisma/adapter-pg": "^7.2.0",
        "@types/nodemailer": "^6.4.17",
        "cloudinary": "^2.6.0",
        "googleapis": "^144.0.0",
        "nodemailer": "^7.0.12",
        "pg": "^8.16.3",
        "puppeteer": "^24.7.1",
        "raw-body": "^3.0.0",
        "stripe": "^17.5.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
